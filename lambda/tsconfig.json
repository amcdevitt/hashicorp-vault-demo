{
    "compilerOptions": {
      "esModuleInterop":true,
      "lib": ["ES2020"],
      "module": "commonjs",
      "moduleResolution":"Node",
      "noImplicitAny": false,
      "outDir":"build",
      "target": "ES2020",
      "skipLibCheck": true,
      "sourceMap": true,
      "typeRoots": [
        "./@types",
        "./node_modules/@types"
      ]
      // "strict":true
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules"
    ]
  
